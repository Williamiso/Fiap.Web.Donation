@{
}
@model TipoProdutoModel

<h1>Tipo Produto - Editar</h1>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">

                @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
                {
                    <div class="alert alert-danger">@ViewBag.Mensagem</div>
                }

                <form action="/TipoProduto/Editar" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label>Nome:</label>
                        <input type="text" name="nome" value="@Model.Nome" class="form-control w-50" size="30" />
                    </div>

                    <div class="form-group">
                        <label>Descrição:</label>
                        <input type="text" name="descricao" value="@Model.Descricao" class="form-control w-75" />              
                    </div>
                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </div>

</div>
